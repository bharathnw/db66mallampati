extends layout

block content
  h1= title
  - let cars = results;
  
  div(class="row")
    div(class="container-fluid")
        div(class="row m-1")
            each value, index in cars 
                div(class="col-sm-12 m-t10")
                    div(class="row")
                        - let destination = `dispatch(\"/car/update?id=${value._id}\")` 
                        div(class="col-sm-2" onclick=`buy(${index})`) Car Name: #{value.name}
                        div(class="col-sm-2" onclick=`buy(${index})`) Car Color: #{value.color}
                        div(class="col-sm-2" onclick=`buy(${index})`) Car Cost: #{value.cost}
                        button.btn( class="btn-primary col-sm-2", onclick= destination) Update 

  script.
    function buy(index){
        alert('You purchased item '+index);
    }
    function dispatch(path){ 
      window.location.href=path 
    } 